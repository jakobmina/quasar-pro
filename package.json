{
  "name": "quasar-pro",
  "private": true,
  "version": "1.1.0",
  "description": "Aether Rescue: Neural Simulation and AI Combat Engine",
  "author": "Jako <jako@example.com>",
  "homepage": "https://github.com/quasar/aether-rescue",
  "repository": {
    "type": "git",
    "url": "https://github.com/quasar/aether-rescue.git"
  },
  "type": "module",
  "main": "electron-main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:8080 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "cap:sync": "npx cap sync android",
    "cap:open": "npx cap open android",
    "android:build": "npm run build && npx cap sync android"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@google/genai": "^1.34.0",
    "electron-updater": "^6.6.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^39.4.0",
    "electron-builder": "^24.13.3",
    "typescript": "~5.8.2",
    "vite": "^6.4.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.quasar.aether-rescue",
    "productName": "Aether Rescue",
    "directories": {
      "output": "dist_electron"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "quasar",
        "repo": "aether-rescue"
      }
    ],
    "files": [
      "dist/**/*",
      "electron-main.cjs",
      "preload.js",
      "package.json"
    ],
    "icon": "public/favicon.ico",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Jako <jako@example.com>",
      "category": "Game",
      "icon": "public/icon.png"
    }
  }
}
